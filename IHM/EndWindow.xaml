<Window x:Class="IHM.EndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over" Height="400" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="244" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="textures/victory.png" Name="endWindowImage" Stretch="Fill"/>
        <TextBlock
            Grid.Row="0"
            Foreground="White"
            FontFamily="Lato"
            FontWeight="Black"
            FontSize="30"
            Margin="0,160,0,0"
            HorizontalAlignment="Center"
            Name="winnerName"></TextBlock>

        <Button
            Grid.Row="1"
            FontSize="23"
            Foreground="#333333"
            Style="{StaticResource ActionMan}"
            Click="onClickRestart">
            Restart
        </Button>

        <Button Grid.Row="2"
            FontSize="23"
            Foreground="#333333"
            Style="{StaticResource ActionMan}"
            Click="onClickExit">
            Exit
        </Button>
    </Grid>
</Window>
