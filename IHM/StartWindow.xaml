<Window x:Class="IHM.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Small World" Height="400" Width="300"
        WindowStartupLocation="CenterScreen"
        Icon="textures/ic_launcher.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="textures/StartScreen.png" Stretch="Fill"/>

        <Button
            Grid.Row="1"
            Click="OnClickNewGame"
            FontSize="23"
            Foreground="#333333"
            Style="{StaticResource ActionMan}">
            New Game
        </Button>

        <Button Grid.Row="2"
            FontSize="23"
            Foreground="#333333"
            Style="{StaticResource ActionMan}"
            Click="OnClickLoadGame">
            Load Game
        </Button>
    </Grid>
</Window>
